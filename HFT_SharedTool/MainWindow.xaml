<Window x:Class="HFT_SharedTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HFT Shared Tool" Height="400" Width="700">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Label x:Name="ModelDrawingLabel" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" />
        </StackPanel>
        <RichTextBox x:Name="LogTextBox" Grid.Row="1" />
    </Grid>
</Window>